<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <!-- Song Title -->
        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Song Name"
            android:textAlignment="center"
            android:textColor="#ddd"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/song_singerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:text="Singer Name"
            android:textAlignment="center"
            android:textColor="#ddd"
            android:textSize="18sp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/head_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <!-- Lượt nghe -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf58f"
                    android:textColor="#ddd"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/song_hear_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textColor="#ddd"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Button thích kèm số lượt thích -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf164"
                    android:textColor="#ddd"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/song_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:background="@android:color/transparent"
                    android:textColor="#ddd"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Button thêm vào danh sách yêu thích -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf004"
                    android:textColor="#ddd"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu thích"
                    android:background="@android:color/transparent"
                    android:textColor="#ddd"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>


        <!-- Song Art -->
        <ImageView
            android:id="@+id/song_art"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circular_border"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:src="@drawable/ic_home" /> <!-- Add border radius here -->

        <!-- Song Progress Bar and Time -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="16dp">

            <!-- Seekbar -->
            <SeekBar
                android:id="@+id/song_seekbar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent" />

            <!-- Time Start -->
            <TextView
                android:id="@+id/song_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/song_seekbar"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/song_seekbar"
                android:background="@android:color/transparent"
                android:text="0:00"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- Time End -->
            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/song_seekbar"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/song_seekbar"
                android:background="@android:color/transparent"
                android:text="4:10"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- Control Buttons -->
            <LinearLayout
                android:id="@+id/control_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song_seekbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <!-- Random Button -->
                <Button
                    android:id="@+id/btn_random"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Random"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf074"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <!-- Previous Button -->
                <Button
                    android:id="@+id/btn_prev"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Previous"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf048"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <!-- Play Button -->
                <Button
                    android:id="@+id/btn_play_pause"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Play"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf04c"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp" />

                <!-- Next Button -->
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Next"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf051"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <!-- Repeat Button -->
                <Button
                    android:id="@+id/btn_repeat"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Repeat"
                    android:fontFamily="@font/fa_solid_900"
                    android:text="\uf079"
                    android:textColor="#000"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <com.chibde.visualizer.BarVisualizer
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent" />

</LinearLayout>
